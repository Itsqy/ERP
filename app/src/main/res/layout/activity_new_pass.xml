<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotpass.NewPassActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_newspass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:collapseIcon="@drawable/ic_baseline_visibility_off_24"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="86dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Please enter a new password bellow"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_newspass" />

    <TextView
        android:id="@+id/tv_currentpass"
        android:layout_width="155dp"
        android:layout_height="16dp"
        android:layout_marginTop="71dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Current password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <EditText
        android:id="@+id/edt_currentpass"
        android:layout_width="336dp"
        android:layout_height="39dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/edt_bg"
        android:drawableEnd="@drawable/ic_baseline_visibility_off_24"
        android:hint="  Input password here"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/tv_currentpass"
        app:layout_constraintTop_toBottomOf="@id/tv_currentpass" />

    <TextView
        android:id="@+id/tv_newpass"
        android:layout_width="155dp"
        android:layout_height="16dp"
        android:layout_marginTop="47dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="New password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/edt_currentpass"
        app:layout_constraintTop_toBottomOf="@id/edt_currentpass" />

    <EditText
        android:id="@+id/edt_newpass"
        android:layout_width="336dp"
        android:layout_height="39dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/edt_bg"
        android:drawableEnd="@drawable/ic_baseline_visibility_off_24"
        android:hint="  New password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/tv_newpass"
        app:layout_constraintTop_toBottomOf="@id/tv_newpass" />

    <TextView
        android:id="@+id/tv_confirmpass"
        android:layout_width="155dp"
        android:layout_height="16dp"
        android:layout_marginTop="47dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Confirm password"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/edt_newpass"
        app:layout_constraintTop_toBottomOf="@id/edt_newpass" />

    <EditText
        android:id="@+id/edt_confirmpass"
        android:layout_width="336dp"
        android:layout_height="39dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/edt_bg"
        android:drawableEnd="@drawable/ic_baseline_visibility_off_24"
        android:hint="  Input password here"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/tv_confirmpass"
        app:layout_constraintTop_toBottomOf="@id/tv_confirmpass" />

    <Button
        android:id="@+id/btn_savepass"
        android:layout_width="336dp"
        android:layout_height="39dp"
        android:layout_marginBottom="49dp"
        android:background="@drawable/bg_rounded"
        android:fontFamily="@font/poppins_semibold"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/edt_confirmpass"
        app:layout_constraintStart_toStartOf="@id/edt_confirmpass" />


</androidx.constraintlayout.widget.ConstraintLayout>